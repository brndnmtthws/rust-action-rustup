{
  "plugins": ["jest", "@typescript-eslint", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:github/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {"i18n-text/no-en": "off", "semi": "off"},
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  }
}
